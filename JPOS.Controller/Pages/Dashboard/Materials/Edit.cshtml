@page "/Dashboard/Materials/Edit"
@model JPOS.Controller.Pages.Dashboard.Materials.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Material.MaterialId" />
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Price" class="control-label"></label>
                <input asp-for="Material.Price" class="form-control" />
                <span asp-validation-for="Material.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Quantity" class="control-label"></label>
                <input asp-for="Material.Quantity" class="form-control" />
                <span asp-validation-for="Material.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.TotalPrice" class="control-label"></label>
                <input asp-for="Material.TotalPrice" class="form-control" />
                <span asp-validation-for="Material.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Status" class="control-label"></label>
                <input asp-for="Material.Status" class="form-control" />
                <span asp-validation-for="Material.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

