@page
@model JPOS.Controller.Pages.Dashboard.Designs.CreateModel
@{
    ViewData["title"] = "Create";
}

<style>
    .edit-category-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .edit-category-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            width: 550px;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

        .form-group select {
            width: 550px;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .back-to-list {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .text-danger {
        color: red;
    }
</style>

<div class="edit-category-container">
    <h1>Create Design</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Design.DesignId" />
                <input type="hidden" asp-for="Design.CreateDate" />
                <input type="hidden" asp-for="Design.CreateBy" />
                <div class="form-group">
                    <label asp-for="Design.Description" class="control-label"></label>
                    <input asp-for="Design.Description" class="form-control" />
                    <span asp-validation-for="Design.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Design.Picture">Select Image:</label>
                    <input asp-for="Design.Picture" class="form-control" accept="image/*" />
                </div>
                <button type="button" class="btn btn-primary" onclick="convertImageToBase64()">Upload</button>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="../Index">Back to List</a>
    </div>
</div>

<script>
    function convertImageToBase64() {
        var file = document.getElementById("imageFile").files[0];
        if (file) {
            var reader = new FileReader();
            reader.onloadend = function () {
                var base64String = reader.result.split(',')[1];
                document.getElementById("previewImage").src = "data:image/jpeg;base64," + base64String;
                document.getElementById("previewImage").style.display = 'block';

                // You can submit the base64String to your server here
                // For example, using AJAX or by setting a hidden input value and submitting the form
            }
            reader.readAsDataURL(file);
        }
    }
</script>
