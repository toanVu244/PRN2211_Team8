@model JPOS.Model.Entities.Category
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form method="post" id="createCategoryForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CatName" class="control-label"></label>
                <input asp-for="CatName" class="form-control" />
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="#" onclick="loadContent('/Dashboard/Categories/Index?handler=Partial')">Back to List</a>
</div>
