<!-- Add Category Modal -->
<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCategoryModalLabel">Add New Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="Create">
                    <div class="form-group">
                        <label asp-for="Category.CatName" class="control-label"></label>
                        <input asp-for="Category.CatName" class="form-control" />
                        <span asp-validation-for="Category.CatName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category.Description" class="control-label"></label>
                        <input asp-for="Category.Description" class="form-control" />
                        <span asp-validation-for="Category.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

