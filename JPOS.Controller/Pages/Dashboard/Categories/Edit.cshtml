@page "/Dashboard/Categories/Edit"
@model JPOS.Controller.Pages.Dashboard.Categories.EditModel

@{
    ViewData["Title"] = "Edit Category";
}

<style>
    .edit-category-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .edit-category-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .back-to-list {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .text-danger {
        color: red;
    }
</style>

<div class="edit-category-container">
    <h1>Edit Category</h1>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Category.CatId" />
        <div class="form-group">
            <label asp-for="Category.CatName" class="control-label"></label>
            <input asp-for="Category.CatName" class="form-control" />
            <span asp-validation-for="Category.CatName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category.Description" class="control-label"></label>
            <input asp-for="Category.Description" class="form-control" />
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="./Index" class="back-to-list">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
}
