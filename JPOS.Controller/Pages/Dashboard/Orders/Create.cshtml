@page "/Dashboard/Orders/Create"
@model JPOS.Controller.Pages.Dashboard.Orders.CreateModel

@{
    ViewData["Title"] = "Create Order";
}

<style>
    .create-order-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .create-order-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .back-to-list {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .text-danger {
        color: red;
    }
</style>

<div class="create-order-container">
    <h1>Order Management</h1>
    <h4>Create Order</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Request.UserId" class="control-label"></label>
            <select asp-for="Request.UserId" class="form-control" asp-items="Model.Users"></select>
        </div>
        <div class="form-group">
            <label asp-for="Request.Description" class="control-label"></label>
            <input asp-for="Request.Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Request.CreateDate" class="control-label"></label>
            <input asp-for="Request.CreateDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Request.Status" class="control-label"></label>
            <select asp-for="Request.Status" class="form-control" asp-items="Model.Statuses"></select>
        </div>
        <div class="form-group">
            <label asp-for="Request.ProductId" class="control-label"></label>
            <select asp-for="Request.ProductId" class="form-control" asp-items="Model.Products"></select>
        </div>
        <div class="form-group">
            <label asp-for="Request.Image" class="control-label"></label>
            <input asp-for="Request.Image" class="form-control" />
            @if (ViewData.ModelState["Request.Image"]?.Errors?.Count > 0)
            {
                <span class="text-danger">@ViewData.ModelState["Request.Image"].Errors[0].ErrorMessage</span>
            }
        </div>
        <div class="form-group">
            <label asp-for="Request.Type" class="control-label"></label>
            <input asp-for="Request.Type" class="form-control" />
            @if (ViewData.ModelState["Request.Type"]?.Errors?.Count > 0)
            {
                <span class="text-danger">@ViewData.ModelState["Request.Type"].Errors[0].ErrorMessage</span>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="Index" class="back-to-list">Back to List</a>
</div>

@section Scripts {
    <!-- Add your custom scripts here if needed -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
}
