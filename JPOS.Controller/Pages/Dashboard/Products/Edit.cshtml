@page "/Dashboard/Products/Edit"
@model JPOS.Controller.Pages.Dashboard.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .edit-category-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .edit-category-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            width: 550px;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }
        .form-group select {
            width: 550px;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        width: 100%;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .back-to-list {
        display: block;
        text-align: center;
        margin-top: 20px;
    }

    .text-danger {
        color: red;
    }
</style>
<div class="edit-category-container">
    <h1>Edit Product</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductId" />
                <div class="form-group">
                    <input type="hidden" asp-for="Product.CreateBy" class="form-control" />
                    <span asp-validation-for="Product.CreateBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.PriceMaterial" class="control-label"></label>
                    <input asp-for="Product.PriceMaterial" class="form-control" />
                    <span asp-validation-for="Product.PriceMaterial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.PriceDesign" class="control-label"></label>
                    <input asp-for="Product.PriceDesign" class="form-control" />
                    <span asp-validation-for="Product.PriceDesign" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProcessPrice" class="control-label"></label>
                    <input asp-for="Product.ProcessPrice" class="form-control" />
                    <span asp-validation-for="Product.ProcessPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.CategoryId" class="control-label"></label>
                    <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.DesignId" class="control-label"></label>
                    <select asp-for="Product.DesignId" class="form-control" asp-items="ViewBag.DesignId"></select>
                    <span asp-validation-for="Product.DesignId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input hidden asp-for="Product.CreateDate" class="form-control" />
                    <span asp-validation-for="Product.CreateDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Status" class="control-label"></label>
                    <select asp-for="Product.Status" class="form-control"
                    ><option>Available</option> 
                    <option>In-Processing</option>
                    <option>Done</option>
                </select>
                    <span asp-validation-for="Product.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Image" class="control-label"></label>
                    <input asp-for="Product.Image" class="form-control" />
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.ProductName" class="control-label"></label>
                    <input asp-for="Product.ProductName" class="form-control" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label"></label>
                    <input asp-for="Product.Description" class="form-control" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="../Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
