@page "{idProduct:int}"
@model JPOS.Controller.Pages.HomePages.ProductDetailModel
@{
}
<div class="container">
    <div class="row">
        <!-- Picture Column -->
        <div class="col-md-4">
            <img src="@Model.Product.Image" class="img-fluid" style="height: 300px; object-fit: cover;" alt="@Model.Product.ProductName" />
        </div>

        <!-- Information Column -->
      
        <div class="col-md-8">
            <form method="post">
            <div class="card">
                <div class="card-body">
                    <h4>@Model.Product.ProductName</h4>
                    <p class="card-text">@Model.Product.Description</p>
                    <p class="card-text">Price: @TempData["TotalMoney"] $</p>
                    @* <p class="card-text"> Category : @Model.category.CatName </p> *@

                    <div class="mb-3">
                    <p class="card-text">Custom it with your size click </p>
                    <div>
                        <a class="btn btn-primary" href="/HomePages/ProductCustomDetail/@Model.Product.ProductId">Custom</a>
                    </div>
                        <button class="btn btn-primary" type="submit" style="background-color: #FF6B6B; color: #FFFFFF;">Buy Now</button>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
