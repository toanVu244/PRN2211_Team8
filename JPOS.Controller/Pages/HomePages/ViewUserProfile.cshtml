@page
@model JPOS.Controller.Pages.HomePages.ViewUserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<h2 class="page-title">User Profile</h2>

<div class="profile-container">
    <div class="profile-image">
        <img src="https://i.ibb.co/tbHQsPT/image.png" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;" />
    </div>
    <div class="profile-details">
        <div>
            <label>Full Name: </label>
            <span>@Model.User.FullName</span>
        </div>
        <div>
            <label>Email: </label>
            <span>@Model.User.Email</span>
        </div>
        <div>
            <label>Phone Number: </label>
            <span>@Model.User.PhoneNum</span>
        </div>
        <div>
            <label>Address: </label>
            <span>@Model.User.Address</span>
        </div>
    </div>
</div>

<div class="profile-actions mt-4">
    <a href="../ForgetPasswordPage" class="btn btn-warning">Reset Password</a>
    <a href="/HomePages/UpdateUserProfile?id=@Model.User.UserId" class="btn btn-primary">Update Profile</a>
</div>

<style>
    .page-title {
        margin-bottom: 20px;
        font-weight: bold;
        color: #08618d;
    }
    .profile-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-image {
        margin-right: 20px;
    }

    .profile-details label {
        font-weight: bold;
    }
</style>
