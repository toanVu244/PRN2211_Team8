@page 
@model JPOS.Controller.Pages.HomePages.HomePageModel
@{
}
<style>
    .carousel-item img {
        width: 800px; /* Set the desired width */
        height: 200px; /* Set the desired height */
        object-fit: contain; /* Maintain aspect ratio and fill the container */
    }
</style>
<div id="carouselExample" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1720678043/o2_g4jgtc.jpg" class="d-block w-100 " alt="...">
        </div>
        @for (int i = 0; i < 5; i += 1)
        {
            <div class="carousel-item">
                <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1719498274/qhc3ccgjiove18ldf5fz.jpg" class="d-block w-100 " alt="...">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="input-group input-group-prefix input-group-lg">
    <form method="post" >
        <input type="text" name="SearchTerm" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" value="@Model.SearchTerm">
        <button class="input-group-text" id="inputGroup-sizing-lg" style="background-color: #4CAF50; color: white;" type="submit">Search</button>
    </form>
   
</div>
<div class="container mt-4">
    <div class="row">
        <!-- Categories Column -->
        <div class="col-md-1">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <form method="post">
                                <button type="submit" asp-page-handler="Filter" asp-route-id="0">All</button>
                            </form>
                        </td>
                       
                    </tr>
                    @foreach (var category in Model.Category)
                    {
                        <tr>
                            <td>
                                <form method="post"> 
                                    <button type="submit" asp-page-handler="Filter" asp-route-id="@category.CatId">@category.CatName</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Products Column -->
        <div class="col-md-11">
            @for (int i = 0; i < Model.Product.Count; i += 4)
            {
                <div class="row">
                    @for (int j = 0; j < 4 && (i + j) < Model.Product.Count; j++)
                    {
                        <div class="col-md-3">
                            <div class="card" style="width: 100%; margin-bottom: 1rem;">
                                <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1719498274/qhc3ccgjiove18ldf5fz.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@Model.Product[i + j].ProductName" />
                                <div class="card-body">
                                    <h4>@Model.Product[i + j].ProductName</h4>
                                    <p class="card-text">@Model.Product[i + j].Description</p>
                                    <div>
                                        <button class="btn btn-primary" type="button">Buy</button>
                                        <a href="/HomePages/ProductDetail/@Model.Product[i + j].ProductId" class="btn btn-link">View Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        
    </div>
</div>
