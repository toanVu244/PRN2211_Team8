@page
@model JPOS.Controller.Pages.HomePages.HomePageModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .carousel-item img {
            width: 100%; /* Set the desired width */
            height: 400px; /* Set the desired height */
            object-fit: cover; /* Maintain aspect ratio and fill the container */
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Carousel -->
        <div id="carouselExample" class="carousel slide mb-4" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1720678043/o2_g4jgtc.jpg" class="d-block w-100" alt="...">
                </div>
                @for (int i = 0; i < 5; i += 1)
                {
                    <div class="carousel-item">
                        <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1719498274/qhc3ccgjiove18ldf5fz.jpg" class="d-block w-100" alt="...">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>

        <!-- Search Bar -->
        <div class="input-group input-group-lg mb-4">
            <form method="post" class="w-100">
                <div class="input-group">
                    <input type="text" name="SearchTerm" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" value="@Model.SearchTerm">
                    <div class="input-group-append">
                        <button class="btn btn-success" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Categories and Products -->
        <div class="row">
            <!-- Categories Column -->
            <div class="col-md-2">
                <h5>Categories</h5>
                <div class="list-group">
                    <form method="post">
                        <button type="submit" asp-page-handler="Filter" asp-route-id="0" class="list-group-item list-group-item-action">All</button>
                    </form>
                    @foreach (var category in Model.Category)
                    {
                        <form method="post">
                            <button type="submit" asp-page-handler="Filter" asp-route-id="@category.CatId" class="list-group-item list-group-item-action">@category.CatName</button>
                        </form>
                    }
                </div>
            </div>

            <!-- Products Column -->
            <div class="col-md-10">
                <div class="row">
                    @for (int i = 0; i < Model.Product.Count; i++)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <img src="https://res.cloudinary.com/dkyv1vp1c/image/upload/v1719498274/qhc3ccgjiove18ldf5fz.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@Model.Product[i].ProductName" />
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@Model.Product[i].ProductName</h5>
                                    <p class="card-text">@Model.Product[i].Description</p>
                                    <div class="mt-auto">
                                        <button class="btn btn-primary mb-2">Buy</button>
                                        <a href="/HomePages/ProductDetail/@Model.Product[i].ProductId" class="btn btn-link">View Detail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
