@page
@model JPOS.Controller.Pages.LoginPageModel
@{
    ViewData["Title"] = "Login";
}

<body style="margin: 0; padding: 0; height: 100vh; background-color: #f4f4f9; position: relative;">
    <div style="width: 300px; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #fff; box-shadow: 0 4px 8px rgba(0,0,0,0.1); position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <h1 style="font-size: 24px; font-weight: bold; margin-bottom: 20px; text-align: center;">Login</h1>
        <form method="POST">
            <p>
                <label for="email" style="display: block; margin-bottom: 5px;">Username</label>
                <input type="text" id="email" name="Email" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;" />
            </p>
            <p>
                <label for="password" style="display: block; margin-bottom: 5px;">Password</label>
                <input type="password" id="password" name="Password" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;" />
            </p>
            <button type="submit" name="btnLogin" style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">Login</button>
            <p style="margin-top: 20px; text-align: center;">
                You don't have an account?
                <a asp-page="RegisterPage" style="color: #007bff; text-decoration: none;">Register</a><br>
                <a asp-page="./ForgetPasswordPage" style="color: #007bff; text-decoration: none;">Forgot password</a>
            </p>
        </form>
    </div>
</body>
